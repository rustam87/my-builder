extends ../_template

block variables
    - var title = 'Home page'

block content
    .fullpage.index
        .fullpage__top
            button
        .fullpage__central
            .user
                img(class="user__pic" src="http://via.placeholder.com/141x141", alt="Фото")
                .user__title Аблызалов Рустам
                .user__subtitle Личный сайт веб разработчика
                .user__social
                    .social
                        .social__item
                            a(href="#")
                                svg(width=31,height=17, class="svg svg--color-white")
                                    use(xlink:href="assets/img/sprites/svg/sprite.svg#vk")
                        .social__item
                            a(href="#")
                                svg(width=26,height=22, class="svg svg--color-white")
                                    use(xlink:href="assets/img/sprites/svg/sprite.svg#github")
                        .social__item
                            a(href="#")
                                svg(width=24,height=22, class="svg svg--color-white")
                                    use(xlink:href="assets/img/sprites/svg/sprite.svg#in")
            ul.menu
                li.menu__item
                    a(href="#") Мои работы
                li.menu__item
                    a(href="#") Обо мне
                li.menu__item
                    a(href="#") Блог
        .fullpage__bottom
            .text.text--white © Аблызалов Рустам | создано с любовью в LoftSchool | 2016
